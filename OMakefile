OCAML_LIBS = olib/ocamlfltk

OCAML_CLIBS += clib/libofltk
# OCAML_OTHER_LIBS +=
OCamlProgram($(PROGRAM), $(PRG_FILES))

WIZARD_DEMO = wizard
WIZARD_FILES = wizard

OCamlProgram($(WIZARD_DEMO), $(WIZARD_FILES))

PACK_DEMO = pack
PACK_FILES = pack
OCamlProgram($(PACK_DEMO), $(PACK_FILES))

TAB_DEMO = tabdemo
